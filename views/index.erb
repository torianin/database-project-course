<!DOCTYPE HTML>
<html>
  <head>
    <meta charset="utf-8" />
    <title></title>
    <meta name="author" content="Robert Ignasiak"/>
    <script src="/js/jquery-1.7.1.min.js"></script>
    <script src="/js/jquery.mousewheel-min.js"></script>
    <script src="/js/jquery.terminal-min.js"></script>
    <link href="/css/jquery.terminal.css" rel="stylesheet"/>
    <script src="http://js.pusher.com/2.2/pusher.min.js" type="text/javascript"></script>
    <script>
        var talkid ='<%= getSessionId %>'
    </script>
    <script src="http://www.myersdaily.org/joseph/javascript/md5.js"></script>
    <script>
    jQuery(document).ready(function($) {
        var pusher = new Pusher('0b6500a2c511ef6a91ba');
        
        var channel = pusher.subscribe('test_channel');
        channel.bind(talkid, function(data) {
            var term = $('#term').terminal();
            if (data.message.charAt(0) == '#') {
              eval(data.message.slice(1,data.message.length-1));
            }else{
              term.echo(data.message);
            };
        });

        $('#term').terminal(function(command, term) {
            $.post("ask",
            {
                query:command
            },
            function(data,status){
                if (data.charAt(0) == '#') {
                  eval(data.slice(1,data.length-1));
                }else{
                  term.echo(data);
                };
            });
        }, {
        login: function(user, password, callback) {
           
           var term = $('#term').terminal();
           var passhash = md5(password);
           $.post("login",
             {
                 user:user,
                 password:passhash
             },
            function(data,status){
                eval(data)
            });
        },
        greetings: '',
        name: 'login',
        height: 700,
        width: 1300,
        onBlur: function() {
          return false;
        },
        prompt: ''});
    });
    </script>
  </head>
<body>
<div id="term"></div>
<img src="http://m.natemat.pl/253ae44fa9542b222f4d46131a029d01,641,0,0,0.jpg">
<img src="http://g1poznan.edu.pl/Podstrony/Archiwum/Rok_2008/Grafika/Foto/bezpiecznie1D.jpg">
</body>
